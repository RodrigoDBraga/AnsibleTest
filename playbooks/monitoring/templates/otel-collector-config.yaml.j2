receivers:
  otlp:
    protocols:
      grpc:
      http:

  prometheus:
    config:
      scrape_configs:
      - job_name: 'main-otel-collector-scraper'
        scrape_interval: 10s
        static_configs:
        - targets: ['0.0.0.0:8888', 'localhost:8081', 'localhost:9100']

processors:
  batch:
    timeout: "1s"

extensions:
  health_check:

exporters:
  otlp:
    endpoint: {{ otel_collector_endpoint }}
    tls:
      insecure: true

service:
  pipelines:
    traces:
      receivers: [otlp]
      exporters: [otlp]

    metrics:
      receivers: [prometheus]
      exporters: [otlp]

  extensions: [health_check]
